@page
@model ASP.NET.Views.File.DownloadFileModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Generator</title>
</head>
<body>
    <h2>File Generator</h2>
    <form action="DownloadFile" method="post">
        <label for="fileName">File Name:</label>
        <input type="text" id="fileName" name="fileName" required><br>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" required><br>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" required><br>
        <label for="fileContent">File Content:</label>
        <textarea id="fileContent" name="fileContent" rows="5" cols="40"></textarea><br><br><br>
        <input type="submit" value="Generate File">
    </form>
</body>
</html>
