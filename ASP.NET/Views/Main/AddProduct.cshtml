@page
@model ASP.NET.Views.Main.AddProductModel
@{
    string str = "Не додав";
    bool statusAvilable = TempData.ContainsKey("Status");
    if (statusAvilable)
    {
        bool? status = Convert.ToBoolean(TempData["Status"]);
        if (status == true)
        {
            str = "Додав";
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Додавання (ні, віднімання)</title>
</head>
<body>
    @if (statusAvilable){
    <p>@str</p>
    }
    <form action="AddProduct" method="post">
        <label for="name">Назва:</label><br>
        <input type="text" id="name" name="name"><br><br>

        <label for="price">Ціна:</label><br>
        <input type="number" id="price" name="price" step="0.01"><br><br>

        <input type="submit" value="Додати">
    </form>
    <a href="/ProductView">Список продуктів</a>
</body>
</html>